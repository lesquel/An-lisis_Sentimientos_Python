# ============================================
# Django Settings
# ============================================

# SECURITY: Genera una nueva clave secreta para producción
# Puedes generar una con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Debug mode (True para desarrollo, False para producción)
DEBUG=False

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ============================================
# CORS Configuration
# ============================================

# Orígenes permitidos para CORS (separados por coma)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================
# Database Configuration
# ============================================

# Para SQLite (desarrollo)
DATABASE_URL=sqlite:///db.sqlite3

# Para PostgreSQL (producción)
# DATABASE_URL=postgres://user:password@localhost:5432/sentimind

# ============================================
# AI Model Configuration
# ============================================

# Modelo de Hugging Face para clasificación de sentimientos
HF_MODEL_NAME=nlptown/bert-base-multilingual-uncased-sentiment

# Cache del modelo
HF_HOME=/app/.cache/huggingface

# ============================================
# Django REST Framework
# ============================================

# Paginación por defecto
PAGE_SIZE=20
